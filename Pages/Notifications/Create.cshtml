@page
@model Winamacpowershow.Pages.Notifications.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Notification.Title" class="control-label"></label>
                <input asp-for="Notification.Title" class="form-control" />
                <span asp-validation-for="Notification.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Notification.DatePublished" class="form-control" type="hidden" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <label asp-for="Notification.Content" class="control-label"></label>
                <textarea asp-for="Notification.Content" class="form-control"></textarea>
                <span asp-validation-for="Notification.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}