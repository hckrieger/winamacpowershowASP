@page
@model Winamacpowershow.Pages.Notifications.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].DatePublished)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Notification)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePublished)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.NotificationId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.NotificationId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.NotificationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
