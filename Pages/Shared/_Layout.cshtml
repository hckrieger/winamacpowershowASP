<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Winamacpowershow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootswatch_litera.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Winamacpowershow.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
            
            <div class="container">
                <a href="/"><img class="nav-image" src="~/files/images/POP.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Events</a>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" href="/Events/SummerShow">Summer Show</a></li>
                            <li><a class="dropdown-item text-dark" href="/Events/ToyShow">Toy Show</a></li>
                          </ul>
                        </li> 
                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Exhibitors</a>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" href="/Info/Exhibitors/ExhibitorInfo">Exhibitor Information</a></li>
                            <li><a class="dropdown-item text-dark" href="/Info/Exhibitors/ExhibitorCamping">Exhibitor Camping</a></li>
                          </ul>
                        </li> 
                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Vendors</a>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" href="/Info/Vendors/FleaMarket">Flea Market</a></li>
                            <li><a class="dropdown-item text-dark" href="/Info/Vendors/FoodVendor">Food Vendor</a></li>
                            <li><a class="dropdown-item text-dark" href="/Info/Vendors/ToyShow">Toy Show</a></li>
                          </ul>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Club/Members">Club Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Club/Contact">Contact</a>
                        </li>
                        <li class="nav-item facebook" style="position: relative; top: 0;">
                            <a href="https://www.facebook.com/powerfromthepast"><img style="border: 2px solid navy;" class="facebook" src="~/files/images/facebook.png"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="banner">
        <div class="jumbotron">
            <img src="~/files/images/POP.png" />
        </div>
        <div class="ribbon">
            <a href="/Events/SummerShow">
                <h3>2023 Summer Show Dates July 13th, 14th, 15th, 16th</h3>
            </a>
        </div>    
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            @DateTime.Now.Year - Winamacpowershow - <a asp-area="" asp-page="/Club/Contact">Contact</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>